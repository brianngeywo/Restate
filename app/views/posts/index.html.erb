<table class="ui fixed table">
<br><br>
<p id="notice"><%= notice %></p>
<br>
<div class="container">
  <%= link_to 'New rental', new_post_path, class: "btn" %>
  <%= link_to 'home', "/", class: "btn" %>
</div>
  <thead>
    <tr>
      <th>image</th>
      <th>Title</th>
      <th>Body</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
      
        <td>
        <% if post.image.attached? %>
            <%= image_tag post.image, :class => 'img-fluid' %>
        <% end %>
        </td>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.user.username %></td>
        <td><%= link_to 'Show', post %></td>
        
        <% if current_user && current_user.admin %>
        <td><%= link_to 'Edit your rental', edit_post_path(post) %></td>
        <td><%= link_to 'Remove Rental', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

